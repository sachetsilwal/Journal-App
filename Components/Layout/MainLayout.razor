@inherits LayoutComponentBase

@using global::Journal.Services
@using global::Journal.Models
@inject SettingsService SettingsService
@inject IJSRuntime JSRuntime

<div class="layout">
    <!-- FIXED SIDEBAR - ALWAYS VISIBLE (280px) -->
    <div class="sidebar fixed-sidebar">
        <div class="sidebar-header">
            <img src="images/logo.png" alt="Logo" class="logo" />
        </div>
        <NavMenu />
    </div>

    <!-- Main content - AUTOMATICALLY PUSHED RIGHT -->
    <div class="main-content">
        <!-- Top row - BELOW SIDEBAR -->
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <h2>@PageTitle</h2>
            <div class="top-links">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
                <button class="theme-btn" @onclick="ToggleTheme">
                    
                </button>
            </div>
        </div>

        <!-- Body content -->
        <article class="content px-4">
            @Body
        </article>

        <!-- Footer -->
        <footer class="footer px-4 mt-auto">
            <p>&copy; 2026 Sachet Journal App. All rights reserved by him.</p>
        </footer>
    </div>
</div>

@code {
    // Theme toggle only (removed sidebar toggle)
    private bool isDarkTheme = false;

    private async Task ToggleTheme()
    {
        isDarkTheme = !isDarkTheme;
        await JSRuntime.InvokeVoidAsync("setTheme", isDarkTheme ? "dark" : "light");
    }

    [Parameter] public string PageTitle { get; set; } = "My Journal";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var theme = await SettingsService.GetThemeAsync();
            isDarkTheme = theme == "dark";
            await JSRuntime.InvokeVoidAsync("setTheme", theme);
        }
    }
}